import pandas as pd
from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.common.keys import Keys
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
from selenium.webdriver.edge.service import Service as EdgeService
from selenium.webdriver.edge.options import Options as EdgeOptions
from pathlib import Path
import time
import sys
import zipfile
import logging



log_filename = r"\\awsusdmkfsxn01.jnj.com\mdd_tst_omp\OMP_JNJ_MD_ATOM_LAB\OMPartners\development\dispatcher\bin\Automation\PAK\log\pre_PAK_log_" + time.strftime("%Y-%m-%d_%H-%M-%S") + ".txt"

FTP_key = os.getenv('sharecode')

logging.basicConfig(
    level=logging.INFO,
    format="%(asctime)s - %(levelname)s - %(message)s",
    handlers=[
        logging.FileHandler(log_filename),
        logging.StreamHandler()
    ]
)

# Load Excel file
file_path = r"\\awsusdmkfsxn01.jnj.com\mdd_tst_omp\OMP_JNJ_MD_ATOM_LAB\OMPartners\development\dispatcher\bin\Automation\PAK\PAK_Standard_requirement.xlsx"
df = pd.read_excel(file_path)

# ------------------------------------------------------------
# EDGE DRIVER SETUP
# ------------------------------------------------------------

# Suppress Selenium / Edge noise output
os.environ["WDM_LOG_LEVEL"] = "0"
os.environ["webdriver.edge.silentOutput"] = "true"

# Hide stderr messages
fnull = open(os.devnull, 'w')
sys.stderr = fnull


options.add_argument("--log-level=3")
options.add_experimental_option("excludeSwitches", ["enable-logging"])
options.add_experimental_option("useAutomationExtension", False)


options = EdgeOptions()
options.add_argument("--inprivate")
options.add_argument("--start-maximized")
options.add_argument("--disable-blink-features=AutomationControlled")

prefs = {
    "download.default_directory": str(Path.home() / "Downloads"),
    "download.prompt_for_download": False,
    "download.directory_upgrade": True,
    "safebrowsing.enabled": True,
    "profile.default_content_setting_values.automatic_downloads": 1
}
options.add_experimental_option("prefs", prefs)

service = EdgeService(executable_path=r"C:\Drivers\msedgedriver.exe")
driver = webdriver.Edge(service=service, options=options)
time.sleep(5)

# --- Allow automatic downloads via DevTools ---
try:
    driver.execute_cdp_cmd("Page.setDownloadBehavior", {
        "behavior": "allow",
        "downloadPath": str(Path.home() / "Downloads")
    })
    logging.info("Edge configured to allow automatic downloads.")
except Exception as e:
    logging.warning(f"Could not configure Edge download behavior: {e}")
