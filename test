def download_PAK_file(driver, file_name):
    logging.info(f" Searching for file: {file_name} to download...")

    try:
        # Wait for the file name element
        file_element = WebDriverWait(driver, 25).until(
            EC.presence_of_element_located(
                (By.XPATH, f"//span[contains(@aria-labelledby, 'genfilename') and text()='{file_name}']")
            )
        )
        driver.execute_script("arguments[0].scrollIntoView(true);", file_element)
        time.sleep(1)
        driver.execute_script("arguments[0].click();", file_element)
        logging.info(f" File '{file_name}' selected, waiting for download icon...")

        # Wait for the download icon to appear
        download_button = WebDriverWait(driver, 20).until(
            EC.element_to_be_clickable(
                (By.XPATH, f"//span[text()='{file_name}']/ancestor::tr//i[contains(@class, 'fa-download')]")
            )
        )

        # Ensure download folder permissions
        driver.execute_script("arguments[0].scrollIntoView(true);", download_button)
        time.sleep(1)

        driver.execute_script("arguments[0].click();", download_button)
        logging.info(f" Download initiated for file: '{file_name}'")

        # Wait for the file to appear in Downloads
        download_path = get_download_path()
        download_file_path = os.path.join(download_path, file_name)

        wait_time = 0
        while wait_time < 120:  # wait up to 2 minutes
            if os.path.exists(download_file_path):
                logging.info(f"Download confirmed: '{file_name}' found in {download_path}")
                return download_file_path
            time.sleep(5)
            wait_time += 5

        logging.info(f"Download failed: '{file_name}' not found in {download_path} after waiting.")
        return None

    except Exception as e:
        logging.error(f"Error: Unable to download file '{file_name}' - {e}")
        return None
